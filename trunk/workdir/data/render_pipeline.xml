	<apply_technique_pool name="apply_forward_technique" pool_name="forward"/>
	<render_layer name="render_opaque" layer="opaque"/>
	<render_layer name="render_sereno" layer="sereno"/>
	<render_layer name="render_sereno" layer="sereno"/>
