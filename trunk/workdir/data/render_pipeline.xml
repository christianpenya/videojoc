	FIN FOG -->
	
	INICIO NOISE VIGNETTING
	<enable_alpha_blend/>	
	<draw_quad name="noise_vignetting" material="NoiseVignettingMaterial">
		<texture name="noise" />	
		<texture name="vignetting" />
	</draw_quad>	
	<disable_alpha_blend/>
	FIN NOISE VIGNETTING

	INICIO GUI
	<enable_alpha_blend/>
	<render_gui/>
	<disable_alpha_blend/>	
	FIN GUI
	
